/* ---------------------------- *\
    
    $Helpers

\* ---------------------------- */

*,
*:before,
*:after
    box-sizing border-box
  
html
    font-size(16)

html,
button,
input,
select,
textarea
    color $darkGrey

body
    line-height 1.4
    font-family $montserrat

::-moz-selection
    background $darkGrey
    color white
    text-shadow none

::selection
    background $darkGrey
    color white
    text-shadow none

hr
    display block
    height 1px
    border 0
    border-top 1px solid #ccc
    margin 1em 0
    padding 0

img
    height auto
    max-width 100%
    vertical-align middle

video 
    height auto
    max-width 100%
    vertical-align middle

fieldset
    border 0
    margin 0
    padding 0

textarea
    resize vertical

.chromeframe
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0

/* Declarating general styles for p and h$ */

p, li
    font-size(16)
h1, h2, h3, h4, h5, h6
    font-weight 400
h1, h2, h3, h4, h5, h6, p
    margin-top 0
h1, .alpha
    font-size(27)
h2, .beta
    font-size(24)
h3, .gamma
    font-size(21)
h4, .delta
    font-size(18)
h5, .epsilon
    font-size(15)
h6, .zeta
    font-size(12)
strong
    font-weight 700
a
    text-decoration none
    &:visited
        color inherit

.wrapper
    width 100%
    margin 0 auto
    max-width 1200px
    position relative

.row
    width 100%
      
.half
    width 50%

.third
    width 33.333%

.fourth
    width 25%
    padding-left: 5px;
    padding-right: 5px;

.fifth
    width 20%

.left
    float left

.right
    float right

.align
    width 100%
    height 100%
    display table
    > div
        display table-cell
        vertical-align middle

.flex
    display flex
    flex-wrap wrap
    &.no-wrap > .post
        width 100%

.flex-centering
    centerFlexbox(true,true)

.overlay
    top 0
    left 0
    opacity 0
    z-index 5
    width 100%
    height 100%
    display block
    cursor pointer
    position fixed
    overflow-y auto
    visibility hidden
    pointer-events none
    background-color rgba(0,0,0,.4)
    transition opacity .5s, visibility .5s, transform .4s
    -webkit-tap-highlight-color transparent
    -webkit-tap-highlight-color rgba(0,0,0,0)
    display flex
    justify-content center
    align-items center

.nondisplayed
    display none

.hidden
    display none
    
.hide-item
    opacity 0
    visibility hidden
    transition opacity .3s ease-out, visibility .3s ease-out

.show-item
    opacity 1
    visibility visible
    transition opacity .3s ease-out, visibility .3s ease-out

.clearfix
    clearfix()

/* ---------------------------- *\
    
    $Media $Queries

\* ---------------------------- */

+above(1201)
    /* $min-width: $1201px */
    
    .section
        padding-top 2.85rem
        padding-bottom 2.85rem
        
    .space
        padding-left 2.85rem
        padding-right 2.85rem        

+between(768,1200)
    /* $min-width: $768px / $max-width: $1200px */
    
    .section
        padding-top 2.5rem
        padding-bottom 2.5rem        

    .space
        padding-left 1.75rem
        padding-right 1.75rem

+below(767)
    /* $max-width: $767px */
    
    .section
        padding-top 1.5rem
        padding-bottom 1.5rem        

    .space
        padding-left 1rem
        padding-right 1rem        